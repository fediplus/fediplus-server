# Fedi+ Configuration
NODE_ENV=development

# Server
HOST=localhost
PORT=3001
PUBLIC_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://fediplus:fediplus@localhost:5432/fediplus

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRY=7d

# Storage (local = filesystem, s3 = S3-compatible like MinIO/AWS)
STORAGE_TYPE=local
# STORAGE_LOCAL_PATH=./data/media

# S3 (only needed when STORAGE_TYPE=s3)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=fediplus
# S3_SECRET_KEY=fediplus-secret
# S3_BUCKET=fediplus-media
# S3_REGION=us-east-1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SITE_NAME=Fedi+
